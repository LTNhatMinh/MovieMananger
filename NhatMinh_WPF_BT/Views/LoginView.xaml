<UserControl x:Class="NhatMinh_WPF_BT.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:NhatMinh_WPF_BT.Views"
             mc:Ignorable="d"
             KeyDown="UserControl_KeyDown">
    <Border Background="#FFFFFF"
            CornerRadius="10"
            BorderThickness="1"
            BorderBrush="#3099C5"
            Margin="50" Padding="15 50 15 15" Width="330">
        <StackPanel>
            <!-- Sign up header -->
            <TextBlock Text="Login"
                       FontSize="30"
                       Foreground="#3099C5"/>

            <!-- Sign up SubText -->
            <TextBlock Text="It's about to get fun"
                       FontSize="20"
                       Foreground="#BDBDBD"/>

            <TextBlock Text="User Name"
                       Margin="5,0,0,5"
                       FontSize="18"
                       />
            <!-- Email -->
            <TextBox Name="txtUserName"
                     FontSize="20"
                     Padding="10" Margin="0 5 0 5"
                     BorderBrush="#3099C5" BorderThickness="1"
                     />

            <TextBlock Text="Password"
                       Margin="5,0,0,5"
                       FontSize="18"/>
            <!-- Password -->
            <PasswordBox Name="txtPassword" Tag="Password"
                         FontSize="20" Padding="10" Margin="0 5 0 5"
                         BorderBrush="#3099C5" BorderThickness="1"/>

            <!-- Next Button -->
            <Button Name="btnLogin" Content="Login" Background="#FFA800" Foreground="#FFFFFF"
                    FontSize="30" Padding="50 10" Margin="0 10"
                    BorderThickness="0" HorizontalAlignment="Center"
                    Click="btnLogin_Click"/>
        </StackPanel>
    </Border>
</UserControl>
