<UserControl x:Class="NhatMinh_WPF_BT.AdminView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="100">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button
            Name="btnMovieManager"
            Grid.Column="0"
            Content="Movie manager"
            Background="AliceBlue"
            Click="btnMovieManager_Click"
            Margin="5"/>

        <Button Name="btnListCinema"
                Grid.Column="1"
                Content="List cinema"
                Background="AliceBlue"
                Margin="5" Click="btnListCinema_Click"/>
        <Button Grid.Column="2"
                Name="btnScheduleManager"
                Background="AliceBlue"
                Margin="5"
                Click="btnScheduleManager_Click">
            <TextBlock
                Text="Movie schedule management"
                TextWrapping="Wrap"
                TextAlignment="Center"
                />

        </Button>
        <Button Name="btnScheduleShowtime"
                Grid.Column="3"
                Background="AliceBlue"
                Margin="5"
                Click="btnScheduleShowtime_Click">
            <TextBlock Text="Schedule showtime management"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Width="160">
            </TextBlock>
        </Button>

        <Button Name="btnOrder"
                Grid.Column="4"
                Content="Orders"
                Background="AliceBlue"
                Margin="5"
                Click="btnOrder_Click"/>
        <Button Name="btnLogout"
                Grid.Row="1"
                Grid.Column="5"
                Content="Logout"
                Background="AliceBlue"
                Margin="5"
                Click="btnLogout_Click"/>
    </Grid>
</UserControl>
