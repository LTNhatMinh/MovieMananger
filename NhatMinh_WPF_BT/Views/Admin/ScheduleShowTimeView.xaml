<UserControl x:Class="NhatMinh_WPF_BT.Views.Admin.ScheduleShowTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NhatMinh_WPF_BT.Views.Admin"
             mc:Ignorable="d"
             Loaded="Window_Loaded"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="40"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Schedule Show Time Mananger"
                Foreground="Red"
                FontSize="30"
                Padding="5"
                />
            <TextBlock Grid.Column="1"
                       Name="txtUserName"
                       Text="Name: "
                       Foreground="Black"
                       FontSize="16"
                       Padding="5"
                       VerticalAlignment="Center"
                       />

        </Grid>
        <Grid Grid.Row="1"
              VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Option Movie:"
                           FontSize="16"/>
                <ComboBox Name="cbbMovie"
                          Width="170"
                          Margin="30,0,0,0"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Name"
                          SelectionChanged="cbbMovie_SelectionChanged"/>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="2"
                  Name="dtgSchedule"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="dtgSchedule_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ScheduleID"
                                    Binding="{Binding ScheduleId}" />
                <DataGridTextColumn Header="MovieName"
                                    Binding="{Binding MovieName}" />
                <DataGridTextColumn Header="CinemaName"
                                    Binding="{Binding CinemaName}" />
                <DataGridTextColumn Header="Start Date"
                                    Binding="{Binding AirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="statusText"
                                       Width="80"
                                       Background="LightSkyBlue"
                                       VerticalAlignment="Center"
                                       Loaded="statusTextSchedule_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid Grid.Row="3"
                  Name="dtgScheduleShowtime"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  IsEnabled="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}" />
                <DataGridTextColumn Header="MovieName"
                                    Binding="{Binding MovieName}" />
                <DataGridTextColumn Header="CinemaName"
                                    Binding="{Binding CinemaName}" />
                <DataGridTextColumn Header="ScheduleId"
                                    Binding="{Binding ScheduleId}" />
                <DataGridTextColumn Header="Start Date"
                                    Binding="{Binding AirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTextColumn Header="Show Time"
                                    Binding="{Binding AirDate, StringFormat=\{0:hh:mm\}}" />
                <DataGridTextColumn Header="Duration"
                                    Binding="{Binding Duration}" />
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="statusText"
                                       Width="80"
                                       Background="LightSkyBlue"
                                       VerticalAlignment="Center"
                                       Loaded="statusText_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Column="0"
                      Header="Hour and minute"
                      Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <TextBlock Text="Hour"
                                   VerticalAlignment="Center"
                                   />
                        <ComboBox Name="cbbHour"
                                  Width="60"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"
                                  />
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal">
                        <TextBlock Text="Minute"
                                   VerticalAlignment="Center"
                                   />
                        <ComboBox Name="cbbMinute"
                                  Width="60"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"
                                  />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <Button Grid.Column="1"
                    Name="btnAdd"
                    Content="Add"
                    HorizontalAlignment="Left"
                    Width="90"
                    Height="30"
                    VerticalAlignment="Center"
                    Click="btnAdd_Click"/>
            <Button Grid.Column="2"
                    Name="btnBack"
                    Content="Back"
                    HorizontalAlignment="Center"
                    Width="90"
                    Height="30"
                    VerticalAlignment="Center"
                    Margin="0,0,10,0"
                    Click="btnBack_Click"/>
        </Grid>
    </Grid>
</UserControl>
