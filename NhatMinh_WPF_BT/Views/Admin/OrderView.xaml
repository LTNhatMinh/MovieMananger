<UserControl x:Class="NhatMinh_WPF_BT.Views.Admin.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NhatMinh_WPF_BT.Views.Admin"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Order Mananger"
                Foreground="Red"
                FontSize="30"
                Padding="5"
                />
            <TextBlock Grid.Column="1"
                       Name="txtUserName"
                       Text="Name: "
                       Foreground="Black"
                       FontSize="16"
                       Padding="5"
                       VerticalAlignment="Center"
                       />
        </Grid>
        <Grid  Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel  HorizontalAlignment="Left"
                            Orientation="Vertical">
                    <StackPanel  Orientation="Horizontal"
                                Grid.Row="0">

                        <TextBlock Text="MovieName"
                                   Width="70"/>
                        <ComboBox Name="cbbMovie"
                                  Width="160"
                                  Margin="15,0,0,0"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Name" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="1">
                    <TextBlock Text="Date"
                               VerticalAlignment="Center"
                               Width="70"/>
                    <DatePicker Name="dtpDate"
                                Width="160"
                                Margin="15,0,0,0"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnSearch"
                            Content="Search"
                            Margin="3"
                            Click="btnSearch_Click"/>
                    <Button Grid.Column="1"
                            Name="btnReset"
                            Content="Reset"
                            Margin="3"
                            Click="btnReset_Click"/>
                </Grid>
                <Button Grid.Row="1"
                        Name="btnBack"
                        Content="Back"
                        Margin="3"
                        Click="btnBack_Click"/>

            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Orders"
                           FontSize="20"/>
                <DataGrid Grid.Row="1"
                          Name="dtgOrder"
                          IsReadOnly="True"
                          SelectionChanged="dtgOrder_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="IdOrder"
                                            Binding="{Binding IdOrder}" />
                        <DataGridTextColumn Header="MovieName"
                                            Binding="{Binding MovieName}" />
                        <DataGridTextColumn Header="CinemaType"
                                            Binding="{Binding CinemaType}" />
                        <DataGridTextColumn Header="CustomerName"
                                            Binding="{Binding CustomerName}" />
                        <DataGridTextColumn Header="PhoneNumber"
                                            Binding="{Binding PhoneNumber}" />
                        <DataGridTextColumn Header="Date"
                                            Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" />
                        <DataGridTextColumn Header="Total"
                                            Binding="{Binding Total}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Text="Orders Detail"
                           FontSize="20"/>
                <DataGrid Grid.Row="1"
                          Name="dtgOrderDetail"
                          IsEnabled="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Age"
                                            Binding="{Binding Age}" />
                        <DataGridTextColumn Header="SeatNo"
                                            Binding="{Binding SeatNo}" />
                        <DataGridTextColumn Header="Price"
                                            Binding="{Binding Price}" />
                        <DataGridTextColumn Header="Discount"
                                            Binding="{Binding Discount}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
