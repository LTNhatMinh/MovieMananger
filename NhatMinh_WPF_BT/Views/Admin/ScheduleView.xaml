<UserControl x:Class="NhatMinh_WPF_BT.Views.Admin.ScheduleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NhatMinh_WPF_BT.Views.Admin"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Schedule Mananger"
                Foreground="Red"
                FontSize="30"
                Padding="5"
                />
            <TextBlock Grid.Column="1"
                       Name="txtUserName"
                       Text="Name: "
                       Foreground="Black"
                       FontSize="16"
                       Padding="5"
                       VerticalAlignment="Center"
                       />
        </Grid>
        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" >
                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0">
                        <TextBlock Text="ScheduleId"
                                   Width="90"/>
                        <Border Width="120"
                                Margin="15,0,0,0"
                                Background="GhostWhite"
                                BorderBrush="Gainsboro"
                                BorderThickness="1">

                            <TextBlock Name="txtSchedule"
                                       IsEnabled="False"
                                       VerticalAlignment="Center"/>
                        </Border>

                    </StackPanel>

                    <TextBlock Text="MovieName"
                               Width="70"/>
                    <ComboBox Name="cbbMovie"
                              Width="160"
                              Margin="15,0,0,0"
                              VerticalAlignment="Center"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Name"
                              SelectionChanged="cbbMovie_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,30,0" VerticalAlignment="Center">
                        <TextBlock Text="CinemaName"
                                   VerticalAlignment="Center"
                                   Width="90" />
                        <ComboBox Name="cbbCinema"
                                  Width="120"
                                  Margin="15,0,0,0"
                                  IsEnabled="False"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Name"/>
                    </StackPanel>

                    <TextBlock Text="Start Date"
                               VerticalAlignment="Center"
                               Width="70"/>
                    <DatePicker Name="dtpStartDate"

                                Width="160"
                                Margin="15,0,0,0"
                                IsEnabled="False"
                                VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnReset"
                            Grid.Row=" 0"
                            Content="Reset"
                            Click="btnReset_Click"/>
                    <Button Name="btnAdd"
                            Grid.Column=" 1"
                            Content="Add"
                            Click="btnAdd_Click"/>

                </Grid>
                <Button Name="btnBack"
                        Grid.Row=" 1"
                        Content="Back"
                        Width="60"
                        HorizontalAlignment="Right"
                        Click="btnBack_Click"/>
            </Grid>
        </Grid>

        <DataGrid Name="scheduleDtg"
                  Grid.Row="2"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="scheduleDtg_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ScheduleID"
                                    Binding="{Binding ScheduleId}" />
                <DataGridTextColumn Header="MovieName"
                                    Binding="{Binding MovieName}" />
                <DataGridTextColumn Header="CinemaName"
                                    Binding="{Binding CinemaName}" />
                <DataGridTextColumn Header="Start Date"
                                    Binding="{Binding AirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="statusText"
                                       Width="80"
                                       Background="LightSkyBlue"
                                       VerticalAlignment="Center"
                                       Loaded="statusText_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
