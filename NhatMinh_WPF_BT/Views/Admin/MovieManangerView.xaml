<UserControl x:Class="NhatMinh_WPF_BT.MovieManangerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Movie Mananger"
                Foreground="Red"
                FontSize="30"
                Padding="5"
                />
            <TextBlock Grid.Column="1"
                       Name="txtUserName"
                       Text="Name: "
                       Foreground="Black"
                       FontSize="16"
                       Padding="5"
                       VerticalAlignment="Center"
                       />
        </Grid>
        <DataGrid Grid.Row="1"
                  Name="movieDtg"
                  AutoGenerateColumns="False"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                    Binding="{Binding Id}" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}" />
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}" />
                <DataGridTextColumn Header="Duration"
                                    Binding="{Binding Duration}" />
                <DataGridTextColumn Header="Start Date"
                                    Binding="{Binding StartAirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTextColumn Header="End Date"
                                    Binding="{Binding EndAirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="statusText"
                                       Width="80"
                                       Background="LightSkyBlue"
                                       VerticalAlignment="Center"
                                       Loaded="statusText_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Active">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Lock"
                                    Tag="{Binding}"
                                    Background="LightSkyBlue"
                                    Width="50"
                                    Margin="5,0,0,0"
                                    Click="LockButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    >

            <Button  Grid.Column="1"
                    Name="btnBack"
                    Content="Back"
                    Width="50"
                    Click="btnBack_Click"
                    />
        </StackPanel>
    </Grid>
</UserControl>
