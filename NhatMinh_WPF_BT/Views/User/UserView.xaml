<UserControl x:Class="NhatMinh_WPF_BT.Views.User.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NhatMinh_WPF_BT.Views.User"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="120"/>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="Aqua">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Order"
                Foreground="Red"
                FontSize="30"
                Padding="5"
                />
            <TextBlock Grid.Column="1"
                       Name="txtUserName"
                       Text="Name: "
                       Foreground="Black"
                       FontSize="16"
                       Padding="5"
                       VerticalAlignment="Center"
                       />
        </Grid>
        <Grid  Grid.Row="1" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel  HorizontalAlignment="Left"
                            Orientation="Vertical">
                    <StackPanel  Orientation="Horizontal"
                                Grid.Row="0">
                        <TextBlock Text="MovieName"
                                   Width="70"/>
                        <ComboBox Name="cbbMovie"
                                  Width="160"
                                  Margin="30,0,30,0"
                                  VerticalAlignment="Center"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Name" />
                        <TextBlock Text="Date"
                                   VerticalAlignment="Center"
                                   Width="70"/>
                        <DatePicker Name="dtpDate"
                                    Width="160"
                                    Margin="30,0,0,0"
                                    VerticalAlignment="Center"/>

                    </StackPanel>

                </StackPanel>

            </Grid>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal">
                <TextBlock Text="CustomerName"
                           VerticalAlignment="Center"
                           Width="90"
                           />
                <TextBox Name="txtCustomerName"
                         Width="120"
                         Height="22"
                         Margin="10,0,0,0"/>
                <TextBlock  Text="CustomerPhone"
                           VerticalAlignment="Center"
                           Width="100"
                           Margin="60,0,0,0"/>
                <TextBox Name="txtCustomerPhone"
                         Width="120"
                         Height="22"
                         Margin="10,0,0,0"/>
            </StackPanel>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnSearch"
                            Grid.Row=" 0"
                            Content="Search"
                            Margin="2"
                            Click="btnSearch_Click"/>
                    <Button Name="btnReset"
                            Grid.Column=" 1"
                            Content="Reset"
                            Margin="2"
                            Click="btnReset_Click"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnBuy"
                            Grid.Column="0"
                            Content="Buy"
                            Margin="2"
                            Click="btnBuy_Click"/>
                    <Button Name="btnLogout"
                            Grid.Column=" 1"
                            Content="Logout"
                            Margin="2"
                            Click="btnLogout_Click"/>
                </Grid>
            </Grid>
        </Grid>
        <DataGrid Grid.Row="2"
                  Name="dtgScheduleShowtime"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionChanged="dtgScheduleShowtime_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}" />
                <DataGridTextColumn Header="MovieName"
                                    Binding="{Binding MovieName}" />
                <DataGridTextColumn Header="CinemaName"
                                    Binding="{Binding CinemaName}" />
                <DataGridTextColumn Header="ScheduleId"
                                    Binding="{Binding ScheduleId}" />
                <DataGridTextColumn Header="Start Date"
                                    Binding="{Binding AirDate, StringFormat=\{0:dd/MM/yyyy\}}" />
                <DataGridTextColumn Header="Show Time"
                                    Binding="{Binding AirDate, StringFormat=\{0:hh:mm\}}" />
                <DataGridTextColumn Header="Duration"
                                    Binding="{Binding Duration}" />
                <DataGridTemplateColumn Header="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock x:Name="statusText"
                                       Width="80"
                                       Background="LightSkyBlue"
                                       VerticalAlignment="Center"
                                       Loaded="status_Loaded"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <WrapPanel  Name="wrpCinema"
                   Orientation="Horizontal"
                   Grid.Row="3"
                   Width="700" />
    </Grid>
</UserControl>
